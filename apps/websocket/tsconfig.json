{
  "compilerOptions": {
    "target": "es2016",
    "rootDir": "./src",    
    "declaration": true,  
    "declarationMap": true,
    "outDir": "./dist",
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",                    
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "paths": {
      "@repo/*": ["../../packages/*"]
    }
  }
}